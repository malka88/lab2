<Window x:Class="_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="40">
            <MenuItem x:Name="m" Header="File">
                <MenuItem x:Name="mo" Header="Open" Click="mo_Click"/>
                <MenuItem x:Name="ms" Header="Save" Click="ms_Click"/>
            </MenuItem>
        </Menu>
        <ListBox x:Name="lb"  Margin="0,21,0,0" SelectionChanged="lb_SelectionChanged"/>
    </Grid>
</Window>
