<Window x:Class="_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="20" Margin="0,2,0,0" VerticalAlignment="Top" Width="31">
            <MenuItem x:Name="M1" Header="File">
                <MenuItem x:Name="M1open" Header="Open" Click="M1open_Click"/>
                <MenuItem x:Name="M1save" Header="Save" Click="M1save_Click"/>
            </MenuItem>
        </Menu>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="378" Margin="10,31,0,0" VerticalAlignment="Top" Width="772" SelectionChanged="listBox_SelectionChanged"/>

    </Grid>
</Window>
