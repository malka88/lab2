<Window x:Class="_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250">
    <Grid>
        <TextBox x:Name="TB" Background="LightGray" HorizontalAlignment="Left" TextAlignment="Center" Height="30" VerticalAlignment="Top" Width="242" FontSize="16"/>
        <ListBox x:Name="LB" Background="LightGray" FontSize="16" HorizontalAlignment="Left" Height="210" VerticalAlignment="Top" Width="242" Margin="0,60,0,0"/>
        <Button x:Name="click" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="242" Margin="0,30,0,0" Height="30" Click="Click_Click"/>

    </Grid>
</Window>
